{
    "manifest_version": 3,
    "name": "Untabbed-Chrome",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_title": "Untabbed-Chrome"
    },
    "background": {
        "service_worker": "src/service-worker.js"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:* http://127.0.0.1:*; object-src 'self';"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    }
}